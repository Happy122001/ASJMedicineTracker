<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthQuizActivity">

 <ImageView
     android:id="@+id/background_image"
     android:layout_width="0dp"
     android:layout_height="0dp"
     android:importantForAccessibility="no"
     android:scaleType="centerCrop"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.0"
     app:srcCompat="@drawable/background2" />

 <Button
     android:id="@+id/button_q5_no"
     android:layout_width="wrap_content"
     android:layout_height="65dp"
     android:layout_marginStart="8dp"
     android:layout_marginTop="4dp"
     android:background="@drawable/star"
     android:text="@string/no"
     app:layout_constraintStart_toEndOf="@+id/button_q5_yes"
     app:layout_constraintTop_toBottomOf="@+id/q5_text"
     tools:ignore="DuplicateSpeakableTextCheck" />

 <Button
     android:id="@+id/button_q5_yes"
     android:layout_width="wrap_content"
     android:layout_height="65dp"
     android:layout_marginStart="4dp"
     android:layout_marginTop="4dp"
     android:background="@drawable/star"
     android:backgroundTint="@color/green"
     android:text="@string/yes"
     app:layout_constraintStart_toEndOf="@+id/button_q4_no"
     app:layout_constraintTop_toBottomOf="@+id/q5_text"
     app:rippleColor="@color/green"
     tools:ignore="DuplicateSpeakableTextCheck" />

 <ImageView
     android:id="@+id/q5_image"
     android:layout_width="90dp"
     android:layout_height="90dp"
     android:contentDescription="@string/question5"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toEndOf="@+id/q3_image"
     app:layout_constraintTop_toBottomOf="@+id/q3_image"
     app:layout_constraintVertical_bias="0.4"
     app:srcCompat="@drawable/sleeping" />

 <TextView
     android:id="@+id/q5_text"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="8dp"
     android:padding="5dp"
     android:text="@string/question5"
     android:textAlignment="center"
     app:layout_constraintEnd_toEndOf="@+id/button_q5_no"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="@+id/button_q5_yes"
     app:layout_constraintTop_toBottomOf="@id/q5_image"
     tools:text="Question 5" />

 <Button
     android:id="@+id/button_q4_no"
     android:layout_width="wrap_content"
     android:layout_height="65dp"
     android:layout_marginStart="8dp"
     android:layout_marginTop="4dp"
     android:background="@drawable/star"
     android:text="@string/no"
     app:layout_constraintStart_toEndOf="@+id/button_q4_yes"
     app:layout_constraintTop_toBottomOf="@+id/q4_text" />

 <Button
     android:id="@+id/button_q4_yes"
     android:layout_width="wrap_content"
     android:layout_height="65dp"
     android:layout_marginStart="24dp"
     android:layout_marginTop="4dp"
     android:background="@drawable/star"
     android:backgroundTint="@color/green"
     android:text="@string/yes"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/q4_text"
     app:rippleColor="@color/green" />

 <ImageView
     android:id="@+id/q4_image"
     android:layout_width="90dp"
     android:layout_height="90dp"
     android:contentDescription="@string/question4"
     android:scaleType="fitCenter"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toStartOf="@+id/q3_image"
     app:layout_constraintHorizontal_bias="1.0"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/q3_image"
     app:layout_constraintVertical_bias="0.4"
     app:srcCompat="@drawable/cigarrete" />

 <TextView
     android:id="@+id/q4_text"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="8dp"
     android:padding="5dp"
     android:text="@string/question4"
     android:textAlignment="center"
     app:layout_constraintEnd_toEndOf="@+id/button_q4_no"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="@+id/button_q4_yes"
     app:layout_constraintTop_toBottomOf="@id/q4_image"
     tools:text="Question 4" />

 <Button
     android:id="@+id/button_q3_no"
     android:layout_width="wrap_content"
     android:layout_height="65dp"
     android:layout_marginStart="4dp"
     android:layout_marginTop="4dp"
