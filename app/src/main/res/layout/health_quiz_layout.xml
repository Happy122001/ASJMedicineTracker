     android:layout_marginTop="4dp"
     android:background="@drawable/star"
     android:backgroundTint="@color/button_background_color_yes"
     android:text="@string/yes"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/q3_text"
     app:rippleColor="@color/green" />

 <ImageView
     android:id="@+id/q3_image"
     android:layout_width="90dp"
     android:layout_height="90dp"
     android:contentDescription="@string/question3"
     android:scaleType="fitCenter"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.501"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.414"
     app:srcCompat="@drawable/water" />

 <TextView
     android:id="@+id/q3_text"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:padding="5dp"
     android:text="@string/question3"
     android:textAlignment="center"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="@+id/button_q3_no"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="@+id/button_q3_yes"
     app:layout_constraintTop_toBottomOf="@+id/q3_image"
     app:layout_constraintVertical_bias="0.0"
     tools:text="Question 3" />

 <Button
     android:id="@+id/button_q2_no"
     android:layout_width="wrap_content"
     android:layout_height="65dp"
     android:layout_marginStart="4dp"
     android:layout_marginTop="4dp"
     android:background="@drawable/star"
     android:text="@string/no"
     app:layout_constraintStart_toEndOf="@+id/button_q2_yes"
