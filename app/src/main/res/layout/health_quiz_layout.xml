     android:background="@drawable/star"
     android:backgroundTint="@color/green"
     android:text="@string/yes"
     app:layout_constraintStart_toEndOf="@+id/button_q1_no"
     app:layout_constraintTop_toBottomOf="@+id/q2_text"
     app:rippleColor="@color/green" />

 <ImageView
     android:id="@+id/q2_image"
     android:layout_width="90dp"
     android:layout_height="90dp"
     android:contentDescription="@string/question2"
     android:scaleType="fitCenter"
     app:layout_constraintBottom_toBottomOf="@+id/q3_image"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toEndOf="@+id/q3_image"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.248"
     app:srcCompat="@drawable/meditation" />

 <TextView
     android:id="@+id/q2_text"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="4dp"
     android:padding="5dp"
     android:text="@string/question2"
     android:textAlignment="center"
     app:layout_constraintEnd_toEndOf="@+id/button_q2_no"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="@+id/button_q2_yes"
     app:layout_constraintTop_toBottomOf="@id/q2_image"
